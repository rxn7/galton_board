{
	"name": "galton_board",
	"description": "",
	"version": "0.0.0",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/rxn7/galton_board.git"
	},
	"keywords": [
		"typescript"
	],
	"watch": {
		"build_static": {
			"patterns": [
				"static"
			],
			"extensions": "css,html",
			"quiet": false
		}
	},
	"scripts": {
		"minify": "minify static/index.html > build/index.html & minify static/style.css > build/style.css",
		"build:src": "mkdir -p build ; tsc --project $(pwd)",
		"build_static": "mkdir -p build ; cp -r static/* ./build",
		"build": "npm-run-all --parallel build:src build:static",
		"watch:src": "tsc --watch --project $(pwd)",
		"deploy": "npm run build && npm run minify && gh-pages --dist build",
		"ls": "live-server build",
		"watch": "npm-watch",
		"dev": "npm-run-all --parallel ls watch:src watch"
	},
	"author": "rxn7",
	"license": "ISC",
	"homepage": "https://rxn.lol",
	"devDependencies": {
		"gh-pages": "^6.0.0",
		"live-server": "^1.2.2",
		"minify": "^10.5.2",
		"npm-run-all": "^4.1.5",
		"npm-watch": "^0.11.0"
	}
}
